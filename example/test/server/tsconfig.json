{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "types": ["reflect-metadata", "node"],
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist"]
  }
